{
    "name": "graphql-example",
    "description": "Sample project demonstrating common issues to consider when working on GraphQL API",
    "version": "1.0.0",
    "main": "dist/app.js",
    "author": "Ioram Gordadze <Yoh0xFF@gmail.com>",
    "license": "MIT",
    "repository": "https://github.com/Yoh0xFF/graphql-example",
    "scripts": {
        "migrate": "knex migrate:latest && knex seed:run",
        "watch": "export DEBUG=knex:query && npm run migrate && nodemon --exec babel-node src/app.js",
        "build": "babel src --out-dir dist --copy-files",
        "serve": "npm run build && npm run migrate && node dist/app.js",
        "test": "npm run migrate && jest -i"
    },
    "dependencies": {
        "apollo-server-express": "2.17.0",
        "bcrypt": "5.0.0",
        "cookie-parser": "1.4.5",
        "cors": "2.8.5",
        "dataloader": "2.0.0",
        "express": "4.17.1",
        "graphql": "15.3.0",
        "graphql-depth-limit": "1.1.0",
        "graphql-iso-date": "3.6.1",
        "graphql-middleware": "4.0.2",
        "graphql-shield": "7.3.5",
        "graphql-tag": "2.11.0",
        "graphql-tools": "6.2.0",
        "http-errors": "1.8.0",
        "jsonwebtoken": "8.5.1",
        "knex": "0.21.5",
        "lodash": "4.17.20",
        "morgan": "1.10.0",
        "objection": "2.2.3",
        "password-validator": "5.1.0",
        "sqlite3": "5.0.0",
        "validator": "13.1.1",
        "winston": "3.3.3"
    },
    "devDependencies": {
        "@babel/cli": "7.11.6",
        "@babel/core": "7.11.6",
        "@babel/node": "7.10.5",
        "@babel/plugin-proposal-class-properties": "7.10.4",
        "@babel/polyfill": "7.11.5",
        "@babel/preset-env": "7.11.5",
        "@jest/globals": "26.4.2",
        "apollo-server-testing": "2.17.0",
        "babel-eslint": "10.1.0",
        "babel-jest": "26.3.0",
        "babel-plugin-dynamic-import-node-babel-7": "2.0.7",
        "eslint": "7.8.1",
        "eslint-config-standard": "14.1.1",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-promise": "4.2.1",
        "eslint-plugin-standard": "4.0.1",
        "jest": "26.4.2",
        "nodemon": "2.0.4"
    }
}
